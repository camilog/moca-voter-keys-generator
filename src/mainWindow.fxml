<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/xmlns" alignment="CENTER" hgap="10" vgap="10"
          fx:controller="MainWindowController">

    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="0" GridPane.columnIndex="0">
    <Label alignment="CENTER" id="bulletin-board-label" text="Current Bulletin Board address: http://cjgomez.cl"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="1" GridPane.columnIndex="0">
    <Button alignment="CENTER" id="configure-bb-button" text="Configure Bulletin Board Address"
            onAction="#handleConfigureBBAddressButtonAction"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="2" GridPane.columnIndex="0">
    <Button id="generate-keys-button" text="Generate Voter Keys"
            onAction="#handleGenerateKeysButtonAction"/>
    </HBox>

    <stylesheets>
        <URL value="@javaFx.css" />
    </stylesheets>

</GridPane>